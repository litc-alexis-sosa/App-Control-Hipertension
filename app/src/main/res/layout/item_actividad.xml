<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:background="@drawable/bg_sintoma_unselected"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/imgSintoma"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/caminar" /> <TextView
    android:id="@+id/tvSintomaNombre"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Caminar"
    android:textAlignment="center"
    android:layout_marginTop="4dp"
    android:textColor="#466B95" />

    <TextView
        android:id="@+id/tvSintomaDuracion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 min"
        android:textAlignment="center"
        android:layout_marginTop="2dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/bg_pill_duracion"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone" /> </LinearLayout>