<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7FC"
    tools:context=".HistorySintomasActivity">

    <!-- Toolbar: Usando el estilo de la Activity Síntomas -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHistorial"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#FAF7FC"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Historial de Síntomas"
        app:titleTextColor="#466B95"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHistorialSintomas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarHistorial"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_historial_sintoma" />

    <!-- Título de "No Historial" usando el color de marca -->
    <TextView
        android:id="@+id/tvNoHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay síntomas registrados."
        android:textSize="18sp"
        android:textColor="#466B95"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>