<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingBottom="80dp">

            <!-- Header: Foto, nombre, cambiar nombre, en CardView redondeado -->
            <androidx.cardview.widget.CardView
                android:id="@+id/headerProfileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:background="#466B95">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/profile"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="16dp"
                        app:civ_border_width="0dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/profileName"
                            android:text="correo@ejemplo.com"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/changeName"
                            android:text="Cambiar nombre..."
                            android:textColor="#E2E6FA"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginTop="2dp"/>

                        <TextView
                            android:id="@+id/changePhoto"
                            android:text="Cambiar foto..."
                            android:textColor="#E2E6FA"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Peso -->
            <TextView
                android:text="Peso"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_field"
                android:padding="10dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etPeso"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:hint="Peso"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:text="Kg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#252A34"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- Altura -->
            <TextView
                android:text="Altura"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_field"
                android:padding="10dp"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etAltura"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:hint="Altura"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:text="m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#252A34"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <!-- IMC (calculado) -->
            <TextView
                android:text="IMC"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etIMC"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_field"
                    android:padding="10dp"
                    android:inputType="numberDecimal"
                    android:hint="IMC"/>

                <Button
                    android:id="@+id/btnCalcularIMC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calcular (opcional)"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#466B95"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Sexo -->
            <TextView
                android:text="Sexo"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:id="@+id/rgSexo"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <RadioButton
                    android:id="@+id/rbMujer"
                    android:text="Mujer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:id="@+id/rbHombre"
                    android:text="Hombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"/>
            </RadioGroup>

            <!-- Fecha de nacimiento -->
            <TextView
                android:text="Fecha de nacimiento"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="dd/mm/aaaa"
                android:focusable="false"
                android:background="@drawable/bg_field"
                android:padding="10dp"
                android:layout_marginBottom="4dp"/>

            <!-- Edad (automática) -->
            <TextView
                android:id="@+id/tvEdad"
                android:text="Edad: 0"
                android:textColor="#252A34"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <!-- Fecha de diagnóstico -->
            <TextView
                android:text="Fecha de próxima cita médica"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/etFechaDiagnostico"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="dd/mm/aaaa"
                android:focusable="false"
                android:background="@drawable/bg_field"
                android:padding="10dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:text="Meta de Calorías"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvEditarMetaCalorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fija tu meta (clic aquí)"
                android:textSize="16sp"
                android:textColor="#466B95"
                android:padding="14dp"
                android:background="@drawable/bg_field"/>

            <TextView
                android:text="Alimentos a Evitar"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgAlimentosPredefinidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingVertical="4dp">
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:text="Personalizados"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgAlimentosPersonalizados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingVertical="4dp">
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/etAlimentoPersonalizado"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Añadir otro alimento"
                    android:background="@drawable/bg_field"
                    android:padding="10dp"
                    android:inputType="textCapSentences"/>
                <Button
                    android:id="@+id/btnAgregarAlimentoPer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Añadir"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#466B95"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <TextView
                android:text="Medicamentos a Evitar (Opcional)"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"/>
            <TextView
                android:text="Añade medicamentos específicos que debas evitar."
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgMedicamentosPersonalizados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingVertical="4dp">
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/etMedicamentoPersonalizado"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Añadir medicamento"
                    android:background="@drawable/bg_field"
                    android:padding="10dp"
                    android:inputType="textCapSentences"/>
                <Button
                    android:id="@+id/btnAgregarMedicamentoPer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Añadir"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#466B95"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <TextView
                android:text="Padecimientos Adicionales"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgPadecimientosPredefinidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingVertical="4dp">
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:text="Otros Padecimientos"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#252A34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgPadecimientosPersonalizados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingVertical="4dp">
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/etPadecimientoPersonalizado"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Añadir otro padecimiento"
                    android:background="@drawable/bg_field"
                    android:padding="10dp"
                    android:inputType="textCapSentences"/>
                <Button
                    android:id="@+id/btnAgregarPadecimientoPer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Añadir"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#466B95"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <!-- Correo -->
            <TextView
                android:text="Correo electrónico actual:"
                android:textStyle="bold"
                android:textColor="#252A34"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/tvCorreo"
                android:text="correo@ejemplo.com"
                android:textColor="#252A34"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginBottom="16dp"/>


            <!-- Botón Guardar -->
            <Button
                android:id="@+id/btnSaveProfile"
                android:text="Guardar datos"
                android:textColor="#FFFFFF"
                android:backgroundTint="#466B95"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <!-- Cerrar sesión -->
            <Button
                android:id="@+id/btnLogout"
                android:text="Cerrar sesión"
                android:textColor="#F44336"
                android:backgroundTint="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"/>



        </LinearLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        app:itemIconTint="@color/bottom_nav_icon_color"
        app:itemTextColor="@color/bottom_nav_icon_color"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>