<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <!--
        Este NestedScrollView permite que todo el contenido de adentro
        sea "scrolleable" si no cabe en la pantalla.
        Está anclado a los 4 bordes del ConstraintLayout (main).
    -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--
            Este LinearLayout vertical contiene todos los elementos
            que tenías, más los créditos al final.
        -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="48dp"
            android:paddingBottom="32dp">

            <!-- Ícono superior (tu código original) -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:src="@drawable/iconologin"
                android:elevation="4dp"
                android:contentDescription="Logo app" />

            <!-- Texto Bienvenido (tu código original) -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Bienvenido!"
                android:textColor="#466B95"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"/>

            <!--
                Contenedor para los campos de texto,
                para que coincida con tu app:layout_constraintWidth_percent="0.8"
            -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <!-- Usuario, correo o teléfono (tu código original) -->
                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Usuario, correo o teléfono"
                    android:inputType="textEmailAddress"
                    android:textColor="#466B95"
                    android:textColorHint="#466B95"
                    android:backgroundTint="#466B95"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="32dp"
                    android:padding="4dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#466B95"/>

                <!-- Contraseña (tu código original) -->
                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:textColor="#466B95"
                    android:textColorHint="#466B95"
                    android:backgroundTint="#466B95"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="16dp"
                    android:padding="4dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#466B95"/>

                <!-- Botón Iniciar sesión (tu código original) -->
                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Iniciar sesión"
                    android:textAllCaps="false"
                    android:textColor="#466B95"
                    android:backgroundTint="#e0ecf7"
                    android:elevation="2dp"
                    android:layout_marginTop="32dp"/>

                <!-- Olvidé mi contraseña (tu código original) -->
                <TextView
                    android:id="@+id/forgotPasswordText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Olvidé mi contraseña"
                    android:textColor="#466B95"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"/>

                <ProgressBar
                    android:id="@+id/progressBarForgotPassword"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"/>

                <!-- Botón Crear cuenta (tu código original) -->
                <Button
                    android:id="@+id/createAccountButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Crear cuenta"
                    android:textAllCaps="false"
                    android:textColor="#466B95"
                    android:backgroundTint="#e0ecf7"
                    android:elevation="2dp"
                    android:layout_marginTop="32dp"/>

                <!-- No tienes una cuenta (tu código original) -->
                <TextView
                    android:id="@+id/goToRegisterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿No tienes una cuenta?"
                    android:textColor="#466B95"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout> <!-- Fin del contenedor de campos -->


            <!-- ===================================== -->
            <!-- === INICIO: BLOQUE DE CRÉDITOS AÑADIDO === -->
            <!-- ===================================== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="48dp"
                android:gravity="center">

                <!-- EQUIPO DE DESARROLLO -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equipo de Desarrollo"
                    android:textStyle="bold"
                    android:textColor="#466B95"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LITC. Bryan Alexis Mora Sosa (Desarrollador)"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LITC. Melanie Vanessa Guzman Villalobos (Diseño UI/UX)"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:gravity="center"/>

                <!-- COLABORADORES -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colaboradores (Área de Salud)"
                    android:textStyle="bold"
                    android:textColor="#466B95"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E.L.E. Villamil Quiroz Itzamná"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E.L.E. Pérez Hernández Fabiola"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E.L.E. Mejía Ruiz Esparza Cecilia"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:gravity="center"/>

                <!-- ASESORES -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asesores"
                    android:textStyle="bold"
                    android:textColor="#466B95"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D.Ra. Acosta Alvarez Mariely"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D.R. Arevalo Mercado Carlos Argelio"
                    android:textSize="12sp"
                    android:textColor="#444444"
                    android:gravity="center"/>

                <!-- DISCLAIMER -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esta aplicación fue creada con fines académicos y no reemplaza la consulta médica. La información del usuario se almacena de forma segura en los servicios de Google (Firebase Console)."
                    android:textSize="10sp"
                    android:textColor="#888888"
                    android:gravity="center"
                    android:layout_marginTop="24dp"/>

            </LinearLayout>
            <!-- === FIN: BLOQUE DE CRÉDITOS === -->

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>