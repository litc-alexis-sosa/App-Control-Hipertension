<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7FC">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Mis Síntomas"
        app:titleTextColor="#466B95"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvSintomasTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Síntomas"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#466B95"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp" />

    <!-- Instrucción -->
    <TextView
        android:id="@+id/tvLabelFechaHora"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selecciona la fecha y hora en que presentaste los síntomas"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#466B95"
        app:layout_constraintTop_toBottomOf="@id/tvSintomasTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"/>

    <!-- Fecha y Hora -->
    <LinearLayout
        android:id="@+id/layoutFechaHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvLabelFechaHora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnSeleccionarFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar fecha"
            android:textColor="#FFFFFF"
            android:backgroundTint="#466B95"
            android:textStyle="bold"
            android:layout_marginEnd="12dp"
            />
        <Button
            android:id="@+id/btnSeleccionarHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar hora"
            android:textColor="#FFFFFF"
            android:backgroundTint="#466B95"
            android:textStyle="bold"
            />
    </LinearLayout>

    <!-- Mensaje de error -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selecciona al menos un síntoma."
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutFechaHora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp" />

    <!-- RecyclerView de síntomas EN MOSAICO-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSintomas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvError"
        app:layout_constraintBottom_toTopOf="@id/etNotaSintoma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        />

    <!-- Nota opcional ABAJO (nunca arriba) -->
    <EditText
        android:id="@+id/etNotaSintoma"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/edittext_background"
        android:hint="Agrega una nota u observación (opcional)"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:minLines="2"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnGuardarSintomas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvSintomas" />

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btnGuardarSintomas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar síntomas"
        android:textStyle="bold"
        android:backgroundTint="#466B95"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnVerHistorial"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="12dp"/>

    <!-- Botón Ver historial -->
    <Button
        android:id="@+id/btnVerHistorial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ver Historial de Síntomas"
        android:textStyle="bold"
        android:backgroundTint="#466B95"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>